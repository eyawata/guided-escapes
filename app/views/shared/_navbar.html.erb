                <%= image_tag current_user.avatar, class:"avatar", alt: "dropdown menu" %>
              <% else %>
                <%= image_tag 'https://res.cloudinary.com/djqladxhq/image/upload/v1723730530/x17umayb2am44f33ixtt.png', class:"avatar", alt: "dropdown menu" %>
              <% end %>
            </a>
