      <div class="d-flex flex-row justify-content-center mt-3">
        <%= link_to 'Home', root_path, class: "header-item mx-3 fw-bold", style: "color: #808080; text-decoration: none;" %>
        <%= link_to 'All Experiences', experiences_path, class: "header-item mx-3 fw-bold", style: "color: #808080; text-decoration: none;" %>
