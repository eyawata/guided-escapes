<div class="container">
  <div class="centered-title">
    <h1 class="primary-text-color">Create your experience on Guided Experiences</h1>
    <h2>Share your favorite local Experiences and host likeminded people from all around the globe</h2>
  </div>
  <div class="themed-form" data-controller="map-experience">
    <%= simple_form_for @experience do |f| %>
      <%= f.input :location, input_html: { id: "location-input", data: { map_experience_target: 'locationInput' } } %>
      <div data-map-experience-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
       id="map" data-map-experience-target="map" style="height: 300px; margin-bottom: 20px;"></div>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :duration %>
      <%= f.input :price %>
      <%= f.input :photos, as: :file, input_html: {multiple: true } %>
      <%= f.submit class: "lightpurple-small-btn round-corners" %>
    <% end %>
  </div>
</div>
